<ScreenChooseShape>:
    name: 'shape'
    #hub_data: self.hub_data
    FloatLayout:
        spacing:20
        canvas.before:
            Color:
                rgba: [30/255, 30/255, 30/255, 1]
            Rectangle:
                pos: self.pos
                size: self.size
        MDLabel:
            pos_hint: {'x':0, 'y':0.85}
