<ScreenLogin>:
    name: 'login'
    canvas.before :
        Color:
            rgba: (0, 0, 0, 0.7)
        Rectangle :
            pos: self.pos
            size: self.size
    MDCard:
        md_bg_color: [30/255, 30/255, 30/255, 1]  # Czarny kolor tła karty
        size_hint: 0.5,0.7
        #size: 420, 510
        #size: self.size
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 5
        padding: 30
        spacing: 30
        BoxLayout:
            orientation: 'vertical'
            spacing: 30
            #padding_top: dp(10)
            BoxLayout:  # Dodaj pusty BoxLayout jako odstęp
                size_hint_y: None
                height: dp(50)
            MDLabel:
                text: 'LOGOWANIE'
                font_style: 'Button'
                font_size: 50
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                color: [158/255, 0/255, 158/255, 1]  # Fioletowy kolor tekstu
            MDTextField:
                id : email
                mode : "rectangle"
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text: "adres e-mail"
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                icon_right: "account"
                size_hint_x: None
                #width: 280
                size_hint: 3/4, None
                #font_size: 20
                pos_hint: {"center_x": .5}
            MDTextField:
                id: password
                mode : "rectangle"
                spacing: 20
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                hint_text: "hasło"
                icon_right: "eye-off"
                size_hint_x: None
                size_hint: 3/4, None
                #width: 280
                #font_size: 20
                pos_hint: {"center_x": .5}
                password: True
            MDFillRoundFlatButton:
               # border: (10,10,10,10)
               # font_size: "18sp"
                #spacing : 40
                text: 'ZALOGUJ SIĘ'
                pos_hint: {"center_x": .5}
                spacing: 20
                #font_size: 17
                theme_text_color: "Primary"
                md_bg_color: [158/255, 0/255, 158/255, 1]  # Fioletowy kolor tła przycisku
                elevation_normal: 10
                on_press: root.login(str(root.ids.email.text),str(root.ids.password.text))
                #on_press: root.manager.current = 'simulator'
            MDTextButton:
                text: "Nie masz konta? Zarejestruj się"
                #font_size: 16
                height: self.texture_size[1] + dp(20)
                color: [168/255, 0/255, 168/255, 1]
                pos_hint: {"center_x": .5}
                on_press: root.manager.current = 'register'
            MDIconButton:
                icon: "keyboard-backspace"
                pos_hint: {"center_x": .5}
                spacing: 0
                #font_size: 13
                theme_text_color: "Custom"
                text_color: "deepskyblue"
                on_press: root.manager.current = 'start'

<ScreenRegister>:
    name: 'register'
    FloatLayout:
        canvas.before:
            Color:
                rgba: [30/255, 30/255, 30/255, 1]
            Rectangle:
                pos: self.pos
                size: self.size
        MDIconButton:
            icon: "help-circle"
            pos_hint: {"right": 1, "top": 1}
            spacing: 0
            theme_text_color: "Custom"
            text_color: "deepskyblue"
            on_press: root.show_info_dialog()
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            #pos_hint: 'center'
            pos_hint: {"center_y": .5}

            MDLabel:
                text: 'REJESTRACJA'
                font_style: 'Button'
                font_size: 50
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                color: [158/255, 0/255, 158/255, 1]

            MDTextField:
                id: username
                mode : "rectangle"
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text: "nazwa użytkownika"
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                icon_right: "account"
                size_hint_x: None
                #width: 280
                size_hint: 1/2, None
                #font_size: 20
                pos_hint: {"center_x": .5}

            MDTextField:
                id: email
                mode : "rectangle"
                spacing: 20
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                hint_text: "adres e-mail"
                icon_right: "email"
                size_hint_x: None
                #width: 280
                size_hint: 1/2, None
                #font_size: 20
                pos_hint: {"center_x": .5}

            MDTextField:
                id: password
                mode : "rectangle"
                spacing: 20
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                hint_text: "hasło"
                icon_right: "eye-off"
                size_hint_x: None
                #width: 280
                size_hint: 1/2, None
                #font_size: 20
                pos_hint: {"center_x": .5}
                password: True

            MDTextField:
                id: confirm_password
                mode : "rectangle"
                spacing: 20
                text_color_normal: (1,1,1,1)
                line_color_normal: app.theme_cls.primary_color
                hint_text_color_normal: app.theme_cls.primary_color
                icon_right_color_normal : app.theme_cls.primary_color
                hint_text: "potwierdź hasło"
                icon_right: "eye-off"
                size_hint_x: None
                #width: 280
                size_hint: 1/2, None
                #font_size: 20
                pos_hint: {"center_x": .5}
                password: True


            MDFillRoundFlatButton:
                text: 'ZAREJESTRUJ SIĘ'
                pos_hint: {"center_x": .5}
                spacing: 20
                #font_size: 17
                theme_text_color: "Primary"
                md_bg_color: [158/255, 0/255, 158/255, 1]
                elevation_normal: 10
                on_release: root.register(str(root.ids.email.text),str(root.ids.username.text),str(root.ids.password.text),str(root.ids.confirm_password.text))  # Dodaj funkcję rejestracji

            MDTextButton:
                text: "Masz już konto? Zaloguj się"
                #font_size: 16
                height: self.texture_size[1] + dp(20)
                color: [168/255, 0/255, 168/255, 1]
                pos_hint: {"center_x": .5}
                on_press: root.manager.current = 'login'  # Przekierowanie do ekranu logowania

            MDIconButton:
                icon: "keyboard-backspace"
                pos_hint: {"center_x": .5}
                spacing: 0
                #font_size: 13
                theme_text_color: "Custom"
                text_color: "deepskyblue"
                on_press: root.manager.current = 'start'

