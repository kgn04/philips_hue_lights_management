            font_style: 'Button'
            font_size: 50
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            color: [158/255, 0/255, 158/255, 1]
        MDLabel:
            id: label_shape
            text: 'Wybierz jedną z możliwości ustawienia kasetonów i nadaj mu nazwę, by przejść dalej'
            pos_hint: {'x':0, 'y':0.8}
            #font_style: 'Button'
            #font_size: 16
